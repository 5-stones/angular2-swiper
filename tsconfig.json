{
  "version": "1.6.2",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "experimentalDecorators": true,
    "outDir": "dist/"
  },
  "exclude": [
    "node_modules",
    "typings/main.d.ts",
    "typings/main",
    "dist"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts",
    "typings/browser.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}